@model ShadowOfHisWings.Models.Contact

@{
    ViewBag.Title = "Contact Us";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - ShadowOfHisWings</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
</head>
<body>
    <div class="container mt-5 contact-page">
        <h2 class="text-center mb-4">@ViewBag.Title</h2>

        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card p-4 shadow-sm">
                    <h4 class="text-center">Get in Touch</h4>
                    <p class="text-center">
                        If you have any questions or need more information, feel free to reach out to us.
                    </p>
                    <hr />
                    <p>
                        <strong>Contact Number:</strong>
                        <strong>Rita Abraham</strong>
                        <a href="tel:+27748910714">+27 74 891 0714</a>
                    </p>
                    <p>
                        <strong>Email:</strong>
                        <a href="mailto:shadowofhiswings@gmail.com">shadowofhiswings@gmail.com</a>
                    </p>
                    <p>
                        <strong>NGO Address:</strong>
                        <a href="https://www.google.com/maps/search/?api=1&query=151+Parkside+Drive,+South+Africa" target="_blank">
                            151 Parkside Dr, Silverglen
                        </a>
                    </p>
                </div>
            </div>
        </div>
       

        <!-- More Button and Menu -->
        <div class="text-center mt-5 more-button-container">
            <button class="btn-more" onclick="toggleMenu()">More</button>
            <div id="moreMenu" class="more-menu">
                <a href="@Url.Action("Index", "Home")">Home</a>
                <a href="@Url.Action("About", "Home")">About Us</a>
                <a href="@Url.Action("Index", "Donation")">Donate</a>
                <a href="@Url.Action("Index", "Events")">Events</a>
            </div>
        </div>

        <script>
            function toggleMenu() {
                var menu = document.getElementById('moreMenu');
                menu.style.display = menu.style.display === 'block' ? 'none' : 'block';
            }

            // Auto-expand textarea
            document.querySelectorAll('.auto-expand').forEach(function (textarea) {
                textarea.addEventListener('input', function () {
                    this.style.height = 'auto';
                    this.style.height = (this.scrollHeight) + 'px';
                });
            });
        </script>
</body>
</html>
