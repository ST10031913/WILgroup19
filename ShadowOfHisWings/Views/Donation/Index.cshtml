@model ShadowOfHisWings.Models.Donation

@{
    ViewBag.Title = "Donate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 donation-page">
    <h2 class="text-center">Support Our Recovery Centre</h2>
    <p class="text-center">
        Your generosity helps us provide critical support and services to those in need of recovery and healing.
        Every donation makes a difference, no matter how small.
    </p>

  

    <div class="text-center mt-5">
        <h5><strong>Prefer to donate via bank transfer?</strong></h5>
        <p>
            <strong>Bank:</strong> FNB<br>
            <strong>Account Number:</strong> 63006321309<br>
            <strong>Branch:</strong> 250655
        </p>
        <p class="text-muted">Thank you for your kind support. Together, we can make a lasting impact!</p>
    </div>

    <!-- More Button and Menu -->
    <div class="text-center mt-5 more-button-container">
        <button class="btn-more" onclick="toggleMenu()">More</button>
        <div id="moreMenu" class="more-menu">
            <a href="@Url.Action("Index", "Home")">Home</a>
            <a href="@Url.Action("About", "Home")">About Us</a>
            <a href="@Url.Action("Contact", "Home")">Contact Us</a>
            <a href="@Url.Action("Index", "Events")">Events</a>
        </div>
    </div>

</div>

<script>
    function toggleMenu() {
        var menu = document.getElementById('moreMenu');
        menu.style.display = menu.style.display === 'block' ? 'none' : 'block';
    }

    // Auto-expand textarea (if applicable)
    document.querySelectorAll('.auto-expand').forEach(function (textarea) {
        textarea.addEventListener('input', function () {
            this.style.height = 'auto';
            this.style.height = (this.scrollHeight) + 'px';
        });
    });
</script>
