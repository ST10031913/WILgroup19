@model IEnumerable<ShadowOfHisWings.Models.Testimonial>

@{
    ViewBag.Title = "Testimonials";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Shadow Of His Wings</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="container main-content py-5">
        <h2 class="text-center my-4">@ViewBag.Title</h2>

        @if (!Model.Any())
        {
            <p class="text-center">No testimonials are available at this time.</p>
        }
        else
        {
            <!-- Testimonials Carousel -->
            <div id="testimonialCarousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    @for (int i = 0; i < Model.Count(); i++)
                    {
                        var testimonial = Model.ElementAt(i);
                        <div class="carousel-item @(i == 0 ? "active" : "")">
                            <div class="testimonial-item text-center">
                                <div class="testimonial-content mx-auto" style="max-width: 600px;">
                                    <p class="testimonial-text">@Html.Raw(Html.Encode(testimonial.Content).Replace("\n", "<br />"))</p>
                                </div>
                                <div class="testimonial-author mt-3">
                                    <h5>@testimonial.AuthorName</h5>
                                    <small>@testimonial.DateCreated.ToString("MMMM dd, yyyy")</small>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Carousel controls -->
                <button class="carousel-control-prev" type="button" data-bs-target="#testimonialCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#testimonialCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>

            <!-- Video Testimonials Section -->
            <div class="video-testimonials-section text-center my-5">
                <h3 class="mb-4">Hear Their Stories</h3>
                <p class="mb-4">Watch some of the personal journeys shared by those who have found hope and recovery with us.</p>

                <div class="container">
                    <div class="row justify-content-center g-4">
                        <div class="col-md-4">
                            <div class="video-container shadow-sm rounded overflow-hidden">
                                <iframe width="100%" height="200" src="https://www.youtube.com/embed/rXMkrPdlPbQ"
                                        title="Testimonial Video 1" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen loading="lazy"></iframe>
                                <p class="text-center mt-2">Testimonial - Ryan Reddy</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="video-container shadow-sm rounded overflow-hidden">
                                <iframe width="100%" height="200" src="https://www.youtube.com/embed/P-xP6iFGxHQ"
                                        title="Testimonial Video 2" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen loading="lazy"></iframe>
                                <p class="text-center mt-2">Testimonial - Bruce Sewparsad</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="video-container shadow-sm rounded overflow-hidden">
                                <iframe width="100%" height="200" src="https://www.youtube.com/embed/mSvvFzE-oYE"
                                        title="Testimonial Video 3" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen loading="lazy"></iframe>
                                <p class="text-center mt-2">Testimonial - Nathan Mahabeer</p>
                            </div>
                        </div>
                    </div>

                    <!-- Single "More" Button Below All Videos -->
                    <div class="row mt-4">
                        <div class="col-12 text-center">
                            <a href="@Url.Action("Videos", "Media")" class="btn btn-primary">More</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
