@model ShadowOfHisWings.Models.Testimonial

@{
    ViewBag.Title = "Edit Testimonial";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Shadow Of His Wings</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="container main-content my-5">
        <h2 class="text-center mb-4">@ViewBag.Title</h2>

        @using (Html.BeginForm("Edit", "Testimonials", FormMethod.Post, new { id = Model.Id }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Id)

            <div class="form-group mb-3">
                @Html.LabelFor(m => m.AuthorName, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.AuthorName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.AuthorName, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(m => m.Content, new { @class = "form-label" })
                @Html.TextAreaFor(m => m.Content, new { @class = "form-control", rows = 5 })
                @Html.ValidationMessageFor(m => m.Content, "", new { @class = "text-danger" })
            </div>

            <div class="form-group form-check mb-3">
                @Html.CheckBoxFor(m => m.IsApproved, new { @class = "form-check-input" })
                @Html.LabelFor(m => m.IsApproved, new { @class = "form-check-label" })
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Save</button>
                <a href="@Url.Action("Manage", "Testimonials")" class="btn btn-secondary">Cancel</a>
            </div>
        }

        @section Scripts {
            @{
                await Html.RenderPartialAsync("_ValidationScriptsPartial");
            }
        }
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
