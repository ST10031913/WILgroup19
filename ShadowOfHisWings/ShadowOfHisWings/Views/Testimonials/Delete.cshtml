@model ShadowOfHisWings.Models.Testimonial

@{
    ViewBag.Title = "Delete Testimonial";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Shadow Of His Wings</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="container main-content my-5">
        <h2 class="text-center mb-4">@ViewBag.Title</h2>

        <div class="overlay-box">
            <h3 class="text-center">Are you sure you want to delete this testimonial?</h3>

            <div class="text-center my-4">
                <h4>@Model.AuthorName</h4>
                <blockquote class="blockquote">
                    <p class="mb-2">@Html.Raw(Html.Encode(Model.Content).Replace("\n", "<br />"))</p>
                </blockquote>
                <footer class="blockquote-footer">
                    <small class="text-white">@Model.DateCreated.ToString("MMMM dd, yyyy")</small>
                </footer>
            </div>

            <div class="text-center">
                @using (Html.BeginForm("Delete", "Testimonials", FormMethod.Post, new { id = Model.Id }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.Id)
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a href="@Url.Action("Manage", "Testimonials")" class="btn btn-secondary">Cancel</a>
                }
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
