@model ShadowOfHisWings.Models.Testimonial

@{
    ViewBag.Title = "Add New Testimonial";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Shadow Of His Wings</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="container main-content my-5">
        <h2 class="text-center mb-5">@ViewBag.Title</h2>

        @using (Html.BeginForm("Create", "Testimonials", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(m => m.AuthorName)
                @Html.TextBoxFor(m => m.AuthorName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.AuthorName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Content)
                @Html.TextAreaFor(m => m.Content, new { @class = "form-control", rows = 5 })
                @Html.ValidationMessageFor(m => m.Content, "", new { @class = "text-danger" })
            </div>
            <div class="form-group form-check">
                @Html.CheckBoxFor(m => m.IsApproved, new { @class = "form-check-input" })
                @Html.LabelFor(m => m.IsApproved, new { @class = "form-check-label" })
            </div>
            <button type="submit" class="btn btn-primary mt-3">Save</button>
            <a href="@Url.Action("Manage", "Testimonials")" class="btn btn-secondary mt-3">Cancel</a>
        }

        @section Scripts {
            @{
                await Html.RenderPartialAsync("_ValidationScriptsPartial");
            }
        }
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
