@model IEnumerable<ShadowOfHisWings.Models.Testimonial>

@{
    ViewBag.Title = "Manage Testimonials";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Shadow Of His Wings</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
</head>
<body>
    <div class="container main-content py-5">
        <h2 class="mb-4 text-center">@ViewBag.Title</h2>

        <div class="text-end mb-3">
            <a asp-action="Create" class="btn btn-primary">Add New Testimonial</a>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Author</th>
                    <th>Content</th>
                    <th>Date Created</th>
                    <th>Approved</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var testimonial in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => testimonial.AuthorName)</td>
                        <td>@Html.DisplayFor(modelItem => testimonial.Content)</td>
                        <td>@testimonial.DateCreated.ToString("MMMM dd, yyyy")</td>
                        <td>@Html.DisplayFor(modelItem => testimonial.IsApproved)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@testimonial.Id" class="btn btn-sm btn-secondary">Edit</a>
                            <a asp-action="Delete" asp-route-id="@testimonial.Id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
