@model ShadowOfHisWings.Models.Donation

@{
    ViewBag.Title = "Donate";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Shadow Of His Wings</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="main-content">

        <!-- Donation Page Hero Section -->
        <div class="donation-hero text-center text-white py-5">
            <h1 class="display-4 fw-bold">Support Our Mission</h1>
            <p class="lead">Your contribution empowers recovery, support, and hope for those in need.</p>
        </div>


        <!-- Donation Page Main Content -->
        <div class="container my-5 donation-page separation-top">
            <!-- Why Donate Section -->
            <section class="why-donate-section text-center my-5">
                <h2 class="section-title">Why Your Donation Matters</h2>
                <div class="row mt-4 justify-content-center">
                    <div class="col-md-3 mx-3 benefit-box">
                        <h5 class="benefit-title">Empower Recovery</h5>
                        <p>Help individuals regain control of their lives through faith-based support.</p>
                    </div>
                    <div class="col-md-3 mx-3 benefit-box">
                        <h5 class="benefit-title">Transform Lives</h5>
                        <p>Your donations provide resources essential for lasting change.</p>
                    </div>
                    <div class="col-md-3 mx-3 benefit-box">
                        <h5 class="benefit-title">Spread Hope</h5>
                        <p>Join us in bringing hope and encouragement to those in need.</p>
                    </div>
                </div>
            </section>
        </div>


           
           
            <!-- Bank Details Section -->
            <section id="bank-details" class="text-center my-5">
                <h4 class="section-title">Banking Details</h4>
                <div class="bank-details-card p-4 mx-auto rounded-3 shadow-sm">
                    <p class="mb-1"><strong>Bank:</strong> First National Bank</p>
                    <p class="mb-1"><strong>Account Type:</strong> Current Account</p>
                    <p class="mb-1"><strong>Account Name:</strong> SHADOW OF HIS WINGS RECOVERY CENTRE</p>
                    <p class="mb-1"><strong>Account Number:</strong> 63006321309</p>
                </div>
                <p class="mt-3">Please use your name as a reference when making the donation.</p>
            </section>


           
            <!-- PayPal Integration Section -->
            <section class="text-center mt-custom">
                <h4 class="section-title mb-4">Donate via PayPal</h4>
                 <div class="bank-details-card p-4 mx-auto rounded-3 shadow-sm">
                    <p>Your support through PayPal helps us make an even greater impact.</p>
                    <div class="d-flex justify-content-center mt-4">
                    <a href="https://www.paypal.me/SOHW050522" target="_blank" class="btn btn-primary btn-lg paypal-btn d-flex align-items-center">
                            <img src="https://www.paypalobjects.com/webstatic/icon/pp258.png" alt="PayPal Logo" class="paypal-logo">
                            Donate with PayPal
                        </a>
                    </div>
                </div>
            </section>
        </div>

     <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
