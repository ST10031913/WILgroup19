@model ShadowOfHisWings.Models.Donation

@{
    ViewBag.Title = "Donate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 donation-page">
    <h2 class="text-center">Make a Donation</h2>
    <p class="text-center">Your donation helps us continue our mission to support those in need.</p>
    <div class="row justify-content-center">
        <div class="col-md-6">
            @using (Html.BeginForm("Submit", "Donation", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="form-group mb-3">
                    @Html.LabelFor(m => m.DonorName, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.DonorName, new { @class = "form-control", @placeholder = "Enter your name" })
                    @Html.ValidationMessageFor(m => m.DonorName, "", new { @class = "text-danger" })
                </div>
                <div class="form-group mb-3">
                    @Html.LabelFor(m => m.DonorEmail, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.DonorEmail, new { @class = "form-control", @placeholder = "Enter your email" })
                    @Html.ValidationMessageFor(m => m.DonorEmail, "", new { @class = "text-danger" })
                </div>
                <div class="form-group mb-3">
                    @Html.LabelFor(m => m.Amount, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Amount, new { @class = "form-control", @placeholder = "Enter donation amount" })
                    @Html.ValidationMessageFor(m => m.Amount, "", new { @class = "text-danger" })
                </div>
                <div class="form-group mb-3">
                    @Html.LabelFor(m => m.PaymentMethod, "Payment Method", new { @class = "form-label" })
                    @Html.DropDownListFor(m => m.PaymentMethod, new SelectList(new[] { "Visa", "Mastercard", "PayPal" }), "Select Payment Method", new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.PaymentMethod, "", new { @class = "text-danger" })
                </div>
                <button type="submit" class="btn btn-primary w-100">Donate</button>
            }
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success mt-3">
                    @ViewBag.Message
                </div>
            }
        </div>
    </div>
</div>
