@model ShadowOfHisWings.Models.Home

@{
    ViewBag.Title = Model.Title;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <div class="main-content">
        <!-- Hero Section -->
        <div class="bg position-relative home-index-page">
            <div class="container vertical-center">
                <div class="text-center text-frame">
                    <h2 class="display-4">@Model.Title</h2>
                    <p class="lead">@Model.AboutInfo</p>
                    <a href="@Url.Action("About", "Home")" class="btn btn-primary btn-lg m-2">About Us</a>
                    <a href="@Url.Action("Index", "Events")" class="btn btn-secondary btn-lg m-2">Events</a>
                </div>
            </div>
        </div>

        <!-- Join Us Section -->
        <div class="container text-center py-5">
            <div class="text-frame">
                <h2>Join Us in Making a Difference</h2>
                <p>Your support helps change lives. Join us as we empower individuals on their journey to recovery.</p>
                <a href="@Url.Action("Index", "Donation")" class="btn btn-primary btn-lg m-2">Donate Now</a>
                <a href="@Url.Action("Index", "Contact")" class="btn btn-secondary btn-lg m-2">Get Involved</a>
            </div>
        </div>

        <!-- Our Services Section -->
        <div class="container py-5">
            <h2 class="text-center mb-5">Our Services</h2>
            <div class="row">
                <!-- Counsellors -->
                <div class="col-md-4 mb-4">
                    <div class="service-item text-frame d-flex flex-column h-100">
                        <h3>Counsellors</h3>
                        <p>Meet our dedicated team of counsellors guiding individuals on their journey.</p>
                        <a href="@Url.Action("Counsellors", "Services")" class="btn btn-primary mt-auto">Learn More</a>
                    </div>
                </div>
                <!-- Outreach Programs -->
                <div class="col-md-4 mb-4">
                    <div class="service-item text-frame d-flex flex-column h-100">
                        <h3>Outreach Programs</h3>
                        <p>Learn about our community outreach programs impacting lives.</p>
                        <a href="@Url.Action("OutreachPrograms", "Services")" class="btn btn-primary mt-auto">Learn More</a>
                    </div>
                </div>
                <!-- Programs -->
                <div class="col-md-4 mb-4">
                    <div class="service-item text-frame d-flex flex-column h-100">
                        <h3>Programs</h3>
                        <p>Explore our structured programs that support recovery and spiritual growth.</p>
                        <a href="@Url.Action("Programs", "Services")" class="btn btn-primary mt-auto">Learn More</a>
                    </div>
                </div>
            </div>
        </div>


        <!-- Testimonials Section -->
        <div class="container text-center py-5">
            <h2>What People Say</h2>
            <div class="testimonial-carousel d-flex justify-content-center">
                <div class="testimonial-item text-frame mx-2">
                    <p>"This program changed my life for the better."</p>
                    <small>- Sabelo Zungu, Recovered Member</small>
                </div>
                <div class="testimonial-item text-frame mx-2">
                    <p>"Inspiring work, making a real difference."</p>
                    <small>- Matthew Abraham, Supporter</small>
                </div>
            </div>
        </div>

        <!-- How to Get Help Section -->
        <div class="container text-center py-5">
            <div class="text-frame">
                <h2>How to Get Help</h2>
                <p>If you or someone you know is struggling with addiction, we're here to help. Reach out to us for support and guidance on your journey to recovery.</p>
                <a href="@Url.Action("Index", "Contact")" class="btn btn-primary btn-lg m-2">Get Help Now</a>
            </div>
        </div>


        <!-- Dynamic Gallery Section -->
        <div class="container text-center py-5">
            <h2>Gallery</h2>
            <div class="row">
                @foreach (var image in Model.LatestImages)
                {
                    <div class="col-md-4 mb-4">
                        <img src="@image.ImagePath" alt="@image.Title" class="img-fluid rounded">
                    </div>
                }
            </div>
        </div>

        <!-- Success Stories Section -->
        <div class="container text-center py-5">
            <div class="text-frame">
            <h2 class="mb-3">Testimonials</h2>
            <p class="lead font-italic mb-4">
                "Recovery is not a destination, it is a journey of self-discovery and resilience."
            </p>
            <a href="@Url.Action("Index", "Testimonials")" class="btn btn-primary btn-lg">Read Our Success Stories</a>
            </div>
        </div>

    <!-- Optional JavaScript -->
    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
