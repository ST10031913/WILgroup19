@model ShadowOfHisWings.Models.Home

@{
    ViewBag.Title = Model.Title;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <!-- Bootstrap 5 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <!-- Font Awesome CSS (for icons) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
</head>
<body>

    <div class="main-content">
        <!-- Hero Section -->
        <div class="bg position-relative home-index-page">
            <div class="container vertical-center">
                <div class="text-center text-frame">
                    <h2 class="display-4">@Model.Title</h2>
                    <p class="lead">@Model.AboutInfo</p>
                    <a href="@Url.Action("About", "Home")" class="btn btn-primary btn-lg m-2">About Us</a>
                    <a href="@Url.Action("Index", "Events")" class="btn btn-secondary btn-lg m-2">Events</a>
                </div>
            </div>
        </div>

        <!-- Join Us Section -->
        <div class="container text-center py-5">
            <div class="text-frame">
                <h2>Join Us in Making a Difference</h2>
                <p>Your support helps change lives. Join us as we empower individuals on their journey to recovery.</p>
                <a href="@Url.Action("Index", "Donation")" class="btn btn-primary btn-lg m-2">Donate Now</a>
                <a href="@Url.Action("Index", "Contact")" class="btn btn-secondary btn-lg m-2">Get Involved</a>
            </div>
        </div>

        <!-- Programs and Services Section -->
        <div class="container py-5">
            <h2 class="text-center mb-5">Our Programs and Services</h2>
            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="program-item text-frame d-flex flex-column h-100">
                        <h3>Recovery Support</h3>
                        <p>Personalized support programs to help individuals overcome addiction through faith-based methods.</p>
                        <a href="@Url.Action("Details", "Programs", new { id = 1 })" class="btn btn-primary mt-auto">Learn More</a>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="program-item text-frame d-flex flex-column h-100">
                        <h3>Counseling Services</h3>
                        <p>Professional counselors providing one-on-one and group sessions to foster healing and growth.</p>
                        <a href="@Url.Action("Details", "Programs", new { id = 2 })" class="btn btn-primary mt-auto">Learn More</a>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="program-item text-frame d-flex flex-column h-100">
                        <h3>Community Outreach</h3>
                        <p>Engaging with the community through events and initiatives to promote awareness and support.</p>
                        <a href="@Url.Action("Details", "Programs", new { id = 3 })" class="btn btn-primary mt-auto">Learn More</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Testimonials Section -->
        <div class="container text-center py-5">
            <h2>What People Say</h2>
            <div class="testimonial-carousel d-flex justify-content-center">
                <div class="testimonial-item text-frame mx-2">
                    <p>"This program changed my life for the better."</p>
                    <small>- John Doe, Recovered Member</small>
                </div>
                <div class="testimonial-item text-frame mx-2">
                    <p>"Inspiring work, making a real difference."</p>
                    <small>- Jane Smith, Supporter</small>
                </div>
            </div>
        </div>

        <!-- How to Get Help Section -->
        <div class="container text-center py-5">
            <div class="text-frame">
                <h2>How to Get Help</h2>
                <p>If you or someone you know is struggling with addiction, we're here to help. Reach out to us for support and guidance on your journey to recovery.</p>
                <a href="@Url.Action("Index", "Contact")" class="btn btn-primary btn-lg m-2">Get Help Now</a>
            </div>
        </div>

        <!-- Gallery Section -->
        <div class="container text-center py-5">
            <h2>Gallery</h2>
            <div class="row">
                <div class="col-md-4 mb-4">
                    <img src="~/images/sample1.jpg" alt="Gallery Image 1" class="img-fluid rounded">
                </div>
                <div class="col-md-4 mb-4">
                    <img src="~/images/sample2.jpg" alt="Gallery Image 2" class="img-fluid rounded">
                </div>
                <div class="col-md-4 mb-4">
                    <img src="~/images/sample3.jpg" alt="Gallery Image 3" class="img-fluid rounded">
                </div>
            </div>
        </div>

        <!-- Partners Section -->
        <div class="container py-5">
            <h2 class="text-center mb-5">Our Partners</h2>
            <div class="row text-center">
                <div class="col-md-2 col-4 mb-4">
                    <img src="~/images/partner1.png" alt="Partner 1" class="img-fluid">
                </div>
                <div class="col-md-2 col-4 mb-4">
                    <img src="~/images/partner2.png" alt="Partner 2" class="img-fluid">
                </div>
                <!-- Add more partner logos as needed -->
            </div>
        </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
