@model ShadowOfHisWings.Models.Event

@{
    ViewBag.Title = "Delete Event";
}

<h2>@ViewBag.Title</h2>

<h3>Are you sure you want to delete this event?</h3>

<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Event Date</dt>
        <dd class="col-sm-10">@Model.EventDate.ToString("MMMM dd, yyyy")</dd>
        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location</dd>
    </dl>

    @using (Html.BeginForm("Delete", "Events", FormMethod.Post, new { id = Model.Id }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Manage" class="btn btn-secondary">Cancel</a>
    }
</div>
