@model IEnumerable<ShadowOfHisWings.Models.Event>

@{
    ViewBag.Title = "Events";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Events</h2>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var evt in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@evt.Title</h5>
                        <p class="card-text">@evt.Description</p>
                        <p class="card-text"><strong>Location:</strong> @evt.Location</p>
                        <p class="card-text"><strong>Date:</strong> @evt.Date.ToShortDateString()</p>
                    </div>
                    <div class="card-footer text-muted">
                        <small>Posted on @evt.Date.ToShortDateString()</small>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
