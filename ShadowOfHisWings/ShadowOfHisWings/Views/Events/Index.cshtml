@model IEnumerable<ShadowOfHisWings.Models.Event>

@{
    ViewBag.Title = "Events";
}

<h2>@ViewBag.Title</h2>

@if (!Model.Any())
{
    <p>No events are currently scheduled.</p>
}
else
{
    <ul class="list-group">
        @foreach (var evt in Model)
        {
            <li class="list-group-item">
                <h3>@evt.Title</h3>
                <p>@evt.Description</p>
                <p><strong>Date:</strong> @evt.EventDate.ToString("MMMM dd, yyyy")</p>
                <p><strong>Location:</strong> @evt.Location</p>
            </li>
        }
    </ul>
}
