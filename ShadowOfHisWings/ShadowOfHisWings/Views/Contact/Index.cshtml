@model ShadowOfHisWings.Models.Contact

@{
    ViewBag.Title = "Contact Us";
}

<!-- Custom Style Block -->
@section Styles {
    <style>
        /* Main styling for the page */

        /* Mobile responsiveness */
        (max-width: 576px) {
            .form-group label {
                text-align: left !important;
                padding-bottom: 0.5rem; /* Optional: Ensure space below the label */
            }

            .col-sm-2,
            .col-sm-10 {
                display: block;
                width: 100%; /* Stacking form fields on smaller devices */
            }

            .more-menu a {
                padding: 0.75rem 0;
                display: block;
            }

            .more-button-container {
                margin-bottom: 2rem;
            }
        }

        /* Additional styles for modern look */
        h2 {
            font-weight: 700;
            color: #2c3e50;
        }

        .form-control-lg {
            border-radius: 10px;
            border: 1px solid #ced4da;
            transition: all 0.3s ease-in-out;
        }

        .form-control-lg:focus {
            border-color: #5dade2;
            box-shadow: 0 0 8px rgba(93, 173, 226, 0.3);
        }

        .btn-custom {
            background-color: #2980b9;
            color: white;
            border-radius: 30px;
            padding: 10px 30px;
            transition: background-color 0.3s ease;
        }

        .btn-custom:hover {
            background-color: #1a5276;
        }

        .btn-more {
            background-color: transparent;
            color: #2980b9;
            border: 2px solid #2980b9;
            border-radius: 30px;
            padding: 10px 30px;
            transition: all 0.3s ease-in-out;
        }

        .btn-more:hover {
            background-color: #2980b9;
            color: white;
        }
    </style>
}

<div class="container mt-5 contact-page">
    <h2 class="text-center mb-4">@ViewBag.Title</h2>

    @using (Html.BeginForm("Submit", "Contact", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group row">
            @Html.LabelFor(m => m.Name, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control form-control-lg" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.Surname, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Surname, new { @class = "form-control form-control-lg" })
                @Html.ValidationMessageFor(m => m.Surname, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.Email, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.Comment, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.TextAreaFor(m => m.Comment, new { @class = "form-control form-control-lg", rows = 5 })
                @Html.ValidationMessageFor(m => m.Comment, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-primary btn-lg btn-custom">Send</button>
            </div>
        </div>
    }

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success text-center" role="alert">
            @ViewBag.Message
        </div>
    }
</div>

