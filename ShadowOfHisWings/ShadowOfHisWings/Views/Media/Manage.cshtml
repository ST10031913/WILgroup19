@model IEnumerable<ShadowOfHisWings.Models.Media>

@{
    ViewBag.Title = "Manage Media";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Shadow Of His Wings</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="container main-content py-5">
        <h2 class="mb-4 text-center">@ViewBag.Title</h2>

        <div class="text-end mb-3">
            <a asp-action="Create" class="btn btn-primary">Add New Media</a>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Type</th>
                    <th>Media</th>
                    <th>Date Uploaded</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var media in Model)
                {
                    <tr>
                        <td>@media.Title</td>
                        <td>@media.Type</td>
                        <td>
                            @if (media.Type == "Image")
                            {
                                <img src="@media.ImagePath" alt="@media.Title" width="100" class="img-fluid rounded shadow-sm" />
                            }
                            else if (media.Type == "Video")
                            {
                                <a href="@media.Url" target="_blank">View Video</a>
                            }
                        </td>
                        <td>@media.DateUploaded.ToString("MMMM dd, yyyy")</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@media.Id" class="btn btn-sm btn-secondary">Edit</a>
                            <form asp-action="Delete" asp-route-id="@media.Id" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
