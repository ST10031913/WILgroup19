@{
    ViewBag.Title = "Programs";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <!-- Corrected Meta Viewport Tag for Responsiveness -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Shadow Of His Wings</title>
    <!-- Bootstrap 5 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="@Url.Content("~/css/site.css")" />
</head>
<body>
    <div class="main-content container py-5">
        <h2 class="text-center mb-5">@ViewBag.Title</h2>
        <div class="overlay-box p-4">
            <h3>What We Offer</h3>
            <ul>
                <li>12 Step Programme</li>
                <li>Lectures and written work</li>
                <li>Individual Counselling</li>
                <li>Support Groups facilitated by team leaders</li>
                <li>Daily Spiritual Programs</li>
            </ul>
        </div>
        <!-- Back to Services Button -->
        <div class="mt-4 text-center">
            <a href="@Url.Action("Index", "Services")" class="btn btn-secondary">Back to Services</a>
        </div>
    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
