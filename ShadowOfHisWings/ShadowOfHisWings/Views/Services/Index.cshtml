@model IEnumerable<ShadowOfHisWings.Models.Service>

@{
    ViewBag.Title = "Our Services";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Shadow Of His Wings</title>
     <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
     <link rel="stylesheet" href="@Url.Content("~/css/site.css")" />
 
</head>
<body>
    <div class="main-content container py-5">
        <h2 class="text-center mb-5">@ViewBag.Title</h2>
        <div class="row">
            @foreach (var service in Model)
            {
                <div class="col-md-4 mb-4 d-flex align-items-stretch">
                    <div class="overlay-box text-center p-3 shadow-sm w-100 d-flex flex-column">
                        <h3 class="mb-3">@service.Title</h3>
                        <p class="flex-grow-1">@service.Description</p>
                        <a href="@Url.Action(service.Title.Replace(" ", ""), "Services")" class="btn btn-primary mt-3">Learn More</a>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
