@{
    ViewBag.Title = "Outreach Programs";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <!-- Corrected Meta Viewport Tag for Responsiveness -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Shadow Of His Wings</title>
    <!-- Bootstrap 5 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-..." crossorigin="anonymous" />
    <link rel="stylesheet" href="@Url.Content("~/css/site.css")" />
</head>
<body>
    <div class="main-content container py-5">
        <!-- Page Title and Description -->
        <h2 class="text-center mb-5">@ViewBag.Title</h2>
        <div class="overlay-box p-4 mb-5">
            <h3>Our Outreach Programs</h3>
            <p>
                Visits to local communities and schools where patients share their stories and bring awareness about the detriments of substance abuse.
            </p>
        </div>

        <!-- Outreach Events Section -->
        <div class="py-5">
            <h3 class="text-center mb-4">Outreach Events</h3>
            <div class="gallery-grid">
                <!-- Outreach Event 1 -->
                <div class="gallery-image-container">
                    <img src="@Url.Content("~/Outreach/Outreach1.jpg")" class="gallery-image" alt="Outreach Event 1: Community Visit" />
                </div>
                <!-- Outreach Event 2 -->
                <div class="gallery-image-container">
                    <img src="@Url.Content("~/Outreach/outreach2.jpg")" class="gallery-image" alt="Outreach Event 2: School Awareness" />
                </div>
                <!-- Outreach Event 3 -->
                <div class="gallery-image-container">
                    <img src="@Url.Content("~/Outreach/outreach3.jpg")" class="gallery-image" alt="Outreach Event 3: Community Workshop" />
                </div>
                <!-- Outreach Event 4 -->
                <div class="gallery-image-container">
                    <img src="@Url.Content("~/Outreach/outreach4.jpg")" class="gallery-image" alt="Outreach Event 4: Health Fair" />
                </div>
                <!-- Outreach Event 5 -->
                <div class="gallery-image-container">
                    <img src="@Url.Content("~/Outreach/outreach5.jpg")" class="gallery-image" alt="Outreach Event 5: Support Group" />
                </div>
                <!-- Outreach Event 6 -->
                <div class="gallery-image-container">
                    <img src="@Url.Content("~/Outreach/outreach6.jpg")" class="gallery-image" alt="Outreach Event 6: Awareness Campaign" />
                </div>
                <!-- Outreach Event 7 -->
                <div class="gallery-image-container">
                    <img src="@Url.Content("~/Outreach/outreach7.jpg")" class="gallery-image" alt="Outreach Event 7: Community Engagement" />
                </div>
                <!-- Outreach Event 8 -->
                <div class="gallery-image-container">
                    <img src="@Url.Content("~/Outreach/outreach8.jpg")" class="gallery-image" alt="Outreach Event 8: Health Education" />
                </div>
            </div>
        </div>

        <!-- Add Back to Services Button -->
        <div class="mt-4">
            <a href="@Url.Action("Index", "Services")" class="btn btn-secondary">Back to Services</a>
        </div>
    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-..." crossorigin="anonymous"></script>
    <script src="@Url.Content("~/js/site.js")"></script>
</body>
</html>
