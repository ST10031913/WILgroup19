@model IEnumerable<ShadowOfHisWings.Models.Counsellor>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Shadow Of His Wings</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="main-content container py-5">
        <h2 class="text-center mb-5">Meet Our Counsellors</h2>
        <div class="row justify-content-center">
            @foreach (var counsellor in Model)
            {
                <div class="col-md-4 mb-4 d-flex align-items-stretch">
                    <div class="card counselor-card text-center shadow-sm h-100">
                        <div class="overlay-box h-100 d-flex flex-column">
                            <img src="@Url.Content(counsellor.ImageUrl)" class="rounded-circle counselor-img mt-4 img-fluid" alt="@counsellor.Name" />
                            <div class="card-body">
                                <h5 class="card-title">@counsellor.Name</h5>
                                <p class="card-subtitle mb-2 text-muted">@counsellor.Title</p>
                                <p class="card-text">@counsellor.Description</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <!-- Back to Services Button -->
        <div class="mt-4 text-center">
            <a href="@Url.Action("Index", "Services")" class="btn btn-secondary">Back to Services</a>
        </div>
    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
