@model IEnumerable<ShadowOfHisWings.Models.ServiceProgram>

@{
    ViewBag.Title = "Our Programs";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Shadow Of His Wings</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
</head>
<body>
    <!-- Main Content -->
    <div class="main-content">
        <div class="container py-5">
            <h2 class="text-center mb-5">Programs and Services</h2>
            <div class="row">
                @foreach (var program in Model)
                {
                    <div class="col-md-4 mb-4">
                        <div class="program-item text-frame d-flex flex-column h-100">
                            <h3>@program.Title</h3>
                            <p>@program.ShortDescription</p>
                            <a href="@Url.Action("Details", "Programs", new { id = program.Id })" class="btn btn-primary mt-auto">Learn More</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
