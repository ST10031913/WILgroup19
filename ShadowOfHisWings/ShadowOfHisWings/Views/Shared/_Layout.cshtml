<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Shadow Of His Wings</title>
    <!-- Bootstrap 5 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-..." crossorigin="anonymous" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Preloader -->
    <div id="preloader">
        <div class="spinner"></div>
    </div>

    <!-- Page Content -->
    <header>
        <nav class="navbar navbar-light bg-transparent border-bottom box-shadow fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">Shadow Of His Wings</a>
                <!-- Hamburger button -->
                <button class="navbar-toggler" onclick="toggleMenu()">
                    <span class="navbar-toggler-icon"><i class="fas fa-bars"></i></span>
                </button>

                <!-- Collapsible Sidebar Menu -->
                <div id="sidebarMenu" class="collapse-navbar">
                    <ul>
                        <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                        <li><a href="@Url.Action("About", "Home")">About Us</a></li>
                        <li><a href="@Url.Action("Index", "Programs")">Programs</a></li>
                        <li><a href="@Url.Action("Index", "Events")">Events</a></li>
                        <li><a href="@Url.Action("Index", "Testimonials")">Testimonials</a></li>
                        <li><a href="@Url.Action("Index", "Media")">Media</a></li>
                        <li><a href="@Url.Action("Index", "Donation")">Donate</a></li>
                        <li><a href="@Url.Action("Index", "Contact")">Contact</a></li>
                        <!-- Admin Links -->
                        @if (User.IsInRole("Admin"))
                        {
                            <li><a href="@Url.Action("Manage", "Events")">Manage Events</a></li>
                            <li><a href="@Url.Action("Manage", "Testimonials")">Manage Testimonials</a></li>
                            <li><a href="@Url.Action("Manage", "Media")">Manage Media</a></li>
                            <li>
                                <form id="logoutForm" asp-controller="Account" asp-action="Logout" method="post">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="nav-link btn btn-link text-white" style="display: inline; cursor: pointer;">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li><a href="@Url.Action("Login", "Account")">Admin Login</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto bg-dark text-light">
        <div class="footer-container container py-1">
            <div class="row text-center text-md-start">
                <!-- Logo and About Section -->
                <div class="col-md-4 mb-2 mb-md-0">
                    <img src="~/images/logo.png" alt="Shadow of His Wings Logo" class="footer-logo mb-1" style="max-width: 80px;">
                    <h5>Shadow Of His Wings</h5>
                    <p>Our mission is to provide a nurturing environment for recovery and faith.</p>
                </div>

                <!-- Navigation Links -->
                <div class="col-md-4 mb-2 mb-md-0">
                    <h5>Find Your Way</h5>
                    <ul class="list-unstyled footer-links">
                        <li><a href="@Url.Action("About", "Home")" class="text-light">About Us</a></li>
                        <li><a href="@Url.Action("Index", "Events")" class="text-light">Events</a></li>
                        <li><a href="@Url.Action("Index", "Contact")" class="text-light">Contact Us</a></li>
                        <li><a href="@Url.Action("Index", "Testimonials")" class="text-light">Testimonials</a></li>
                        <li><a href="@Url.Action("Index", "Media")" class="text-light">Media</a></li>
                    </ul>
                </div>

                <!-- Social Links -->
                <div class="col-md-4">
                    <h5>Follow Us</h5>
                    <div class="footer-social mt-1">
                        <a href="#" class="text-light me-1"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="text-light me-1"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="text-light"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
            </div>
            <div class="text-center mt-1 footer-bottom">
                <small>&copy; @DateTime.Now.Year - Shadow Of His Wings</small>
            </div>
        </div>
    </footer>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-..." crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
