<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shadow Of His Wings</title>
    <!-- Bootstrap 5 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-..." crossorigin="anonymous" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Preloader -->
    <div id="preloader">
        <div class="spinner"></div>
    </div>

    <!-- Page Content -->
    <header>
        <nav class="navbar navbar-light bg-transparent border-bottom box-shadow fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">Shadow Of His Wings</a>
                <!-- Hamburger button -->
                <button class="navbar-toggler" onclick="toggleMenu()">
                    <span class="navbar-toggler-icon"><i class="fas fa-bars"></i></span>
                </button>

                <!-- Collapsible Sidebar Menu -->
                <div id="sidebarMenu" class="collapse-navbar">
                    <ul>
                        <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                        <li><a href="@Url.Action("About", "Home")">About Us</a></li>
                        <li><a href="@Url.Action("Index", "Services")">Programs</a></li>
                        <li><a href="@Url.Action("Index", "Events")">Events</a></li>
                        <li><a href="@Url.Action("Index", "Testimonials")">Testimonials</a></li>
                        <li><a href="@Url.Action("Index", "Media")">Media</a></li>
                        <li><a href="@Url.Action("Index", "Donation")">Donate</a></li>
                        <li><a href="@Url.Action("Index", "Contact")">Contact</a></li>
                        <!-- Admin Links -->
                        @if (User.IsInRole("Admin"))
                        {
                            <li><a href="@Url.Action("Manage", "Events")">Manage Events</a></li>
                            <li><a href="@Url.Action("Manage", "Testimonials")">Manage Testimonials</a></li>
                            <li><a href="@Url.Action("Manage", "Media")">Manage Media</a></li>
                            <li>
                                <form id="logoutForm" asp-controller="Account" asp-action="Logout" method="post">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="nav-link btn btn-link text-white" style="display: inline; cursor: pointer;">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li><a href="@Url.Action("Login", "Account")">Admin Login</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Updated Footer Starts Here -->
    <footer class="footer mt-auto bg-dark text-light">
        <div class="footer-container container py-4">
            <!-- First Row: About and Navigation Links -->
            <div class="row">
                <!-- About Section -->
                <div class="col-md-6 mb-4">
                    <h5>Shadow Of His Wings Recovery Centre</h5>
                    <p>
                        We are a non-profit organization based in Chatsworth, Durban, South Africa, dedicated to eradicating drug and alcohol addiction. We provide holistic care focusing on physical, emotional, and spiritual well-being through programs like the 12 Step Program, group therapy, and individual counseling. Our passionate team fosters a supportive residential environment to assist individuals on their journey to recovery.
                    </p>
                </div>

                <!-- Navigation Links -->
                <div class="col-md-6 mb-4">
                    <h5>Find Your Way</h5>
                    <ul class="list-unstyled">
                        <li><a href="@Url.Action("About", "Home")" class="text-light">About Us</a></li>
                        <li><a href="@Url.Action("Index", "Events")" class="text-light">Events</a></li>
                        <li><a href="@Url.Action("Index", "Contact")" class="text-light">Contact Us</a></li>
                        <li><a href="@Url.Action("Index", "Testimonials")" class="text-light">Testimonials</a></li>
                        <li><a href="@Url.Action("Index", "Media")" class="text-light">Media</a></li>
                    </ul>
                </div>
            </div>

            <!-- Second Row: Contact Information and Location Map -->
            <div class="row">
                <!-- Contact Information for Mines -->
                <div class="col-md-6 mb-4">
                    <h5>Contact Us</h5>
                    <address>
                        <p><i class="fas fa-map-marker-alt me-2" aria-hidden="true"></i><strong>Address:</strong> 151 Parkside Dr, Silverglen, Chatsworth, 4092, South Africa</p>
                        <p><i class="fas fa-phone me-2" aria-hidden="true"></i><strong>Phone:</strong> (+27) 74 891-0714</p>
                        <p><i class="fas fa-envelope me-2" aria-hidden="true"></i><strong>Email:</strong> <a href="mailto:rita@painterior.co.za" class="text-light">rita@painterior.co.za</a></p>
                        <p><i class="fas fa-clock me-2" aria-hidden="true"></i><strong>Hours:</strong> Mon-Fri: 8am - 6pm</p>
                    </address>
                </div>

                <!-- Location Map for Mines -->
                <div class="col-md-6 mb-4">
                    <h5>Our Location</h5>
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3446.9395013843847!2d30.900427515478558!3d-29.924952782406506!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1ef7ab310b224b53%3A0x891e9b29f5907b62!2s151%20Parkside%20Dr%2C%20Silverglen%2C%20Chatsworth%2C%204092%2C%20South%20Africa!5e0!3m2!1sen!2sus!4v1621362911975!5m2!1sen!2sus"
                            width="100%"
                            height="250"
                            style="border:0;"
                            allowfullscreen=""
                            loading="lazy"
                            title="Shadow Of His Wings Location">
                    </iframe>
                </div>
            </div>

            <!-- Third Row: NGO Registration Number -->
            <div class="row">
                <div class="col-12 text-center">
                    <small>Registered No. 274-496 NPO</small>
                </div>
            </div>

            <!-- Fourth Row: Privacy Policy Button -->
            <div class="row mt-3">
                <div class="col-12 text-center">
                    <a href="@Url.Content("~/Privacy-Policy/Privacy Policy.pdf")" target="_blank" rel="noopener noreferrer" class="btn btn-outline-light">
                        Privacy Policy
                    </a>
                </div>
            </div>

            <!-- Fifth Row: Copyright -->
            <div class="row">
                <div class="col-12 text-center mt-2">
                    <small>&copy; @DateTime.Now.Year - Shadow Of His Wings Recovery Centre</small>
                </div>
            </div>
        </div>
    </footer>
    <!-- Updated Footer Ends Here -->
    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-..." crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
