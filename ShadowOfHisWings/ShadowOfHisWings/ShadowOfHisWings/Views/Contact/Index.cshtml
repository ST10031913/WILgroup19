@model ShadowOfHisWings.Models.Contact

@{
    ViewBag.Title = "Contact Us";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - ShadowOfHisWings</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
</head>
<body>
    <div class="container mt-5 contact-page">
        <h2 class="text-center mb-4">@ViewBag.Title</h2>

        @using (Html.BeginForm("Submit", "Contact", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group row">
                @Html.LabelFor(m => m.Name, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control form-control-lg" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(m => m.Surname, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Surname, new { @class = "form-control form-control-lg" })
                    @Html.ValidationMessageFor(m => m.Surname, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(m => m.Email, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(m => m.Comment, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.TextAreaFor(m => m.Comment, new { @class = "form-control form-control-lg auto-expand", rows = 5 })
                    @Html.ValidationMessageFor(m => m.Comment, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary btn-lg btn-custom">Send</button>
                </div>
            </div>
        }

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success text-center" role="alert">
                @ViewBag.Message
            </div>
        }

        <!-- More Button and Menu -->
        <div class="text-center mt-5 more-button-container">
            <button class="btn-more" onclick="toggleMenu()">More</button>
            <div id="moreMenu" class="more-menu">
                <a href="@Url.Action("Index", "Home")">Home</a>
                <a href="@Url.Action("About", "Home")">About Us</a>
                <a href="@Url.Action("Index", "Donation")">Donate</a>
                <a href="@Url.Action("Index", "Events")">Events</a>
            </div>
        </div>

        <script>
            function toggleMenu() {
                var menu = document.getElementById('moreMenu');
                menu.style.display = menu.style.display === 'block' ? 'none' : 'block';
            }

            // Auto-expand textarea
            document.querySelectorAll('.auto-expand').forEach(function (textarea) {
                textarea.addEventListener('input', function () {
                    this.style.height = 'auto';
                    this.style.height = (this.scrollHeight) + 'px';
                });
            });
        </script>
</body>
</html>
